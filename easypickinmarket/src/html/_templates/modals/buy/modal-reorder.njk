<script>

    // 재주문 팝업
    const reorderModalOne = document.querySelector(".modal-reorder-case1")
    const reorderModalOneElems = document.querySelectorAll(".modal-reorder-case1 .reorder-radio-wrap .form-control input[type='radio']")
    const reorderModalOneText = document.querySelector(".modal-reorder-case1 .reorder-caption-wrap .bold-text")

    if (reorderModalOne) {

        for (i = 0; i < reorderModalOneElems.length; i++) {
            reorderModalOneElems[i].addEventListener('click', function () {
                reorderModalOneText.innerText = this.getAttribute('data-value')
            })
        }
        

    }

</script>